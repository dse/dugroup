ifeq ($(shell hostname -s), crow)
	DEST = /www/webonastick.com/htdocs/dugroup
else
	DEST = dse@crow.webonastick.com:/www/webonastick.com/htdocs/dugroup
endif

.PHONY: publish
publish: dugroup.1.html tar
	rsync -av dugroup-*.tar.gz dugroup.1.html $(DEST)

.PHONY: test
test:
	./dugroup -b -i < test/dugroup-test-in.txt | \
		diff - test/dugroup-test-out.txt

.PHONY: test-manpage
test-manpage: dugroup.1
	groff -Tascii -man dugroup.1 | less

